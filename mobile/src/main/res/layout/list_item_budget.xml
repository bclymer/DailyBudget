<?xml version="1.0" encoding="utf-8"?>
<com.bclymer.dailybudget.views.BudgetView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/list_item_budget"
        android:layout_width="@dimen/list_item_budget_width"
        android:layout_height="@dimen/list_item_budget_width"
        android:background="@drawable/background_card"
        android:padding="5dp">

        <TextView
            android:id="@+id/list_item_budget_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="18sp"
            tools:text="Budget Name - Long Name" />

        <TextView
            android:id="@+id/list_item_budget_textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="$8.43" />

        <ImageButton
            android:id="@+id/list_item_budget_imagebutton_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@string/edit_budget"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_edit_white_36dp"
            android:tint="@color/blue_dark" />

        <ImageButton
            android:id="@+id/list_item_budget_imagebutton_viewtransactions"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:contentDescription="@string/view_transactions"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info_outline_white_36dp"
            android:tint="@color/blue_dark" />

    </RelativeLayout>

</com.bclymer.dailybudget.views.BudgetView>