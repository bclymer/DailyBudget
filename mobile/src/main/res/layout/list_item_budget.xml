<?xml version="1.0" encoding="utf-8"?>
<com.bclymer.dailybudget.views.BudgetView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_budget"
    android:layout_width="@dimen/list_item_budget_width"
    android:layout_height="@dimen/list_item_budget_width"
    android:background="@drawable/background_card"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/list_item_budget_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="18sp"
        tools:text="Budget Name - Long Name" />

    <TextView
        android:id="@+id/list_item_budget_textview_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="$8.43" />

    <ImageButton
        android:id="@+id/list_item_budget_imagebutton_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="@string/edit_budget" />

    <ImageButton
        android:id="@+id/list_item_budget_imagebutton_addtransaction"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_add"
        android:contentDescription="@string/add_transaction" />

</com.bclymer.dailybudget.views.BudgetView>